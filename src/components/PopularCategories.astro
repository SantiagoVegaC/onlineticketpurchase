---
import MovieIcon from "../../src/assets/icons/MovieIcon.astro";
import MusicIcon from "../../src/assets/icons/MusicIcon.astro";
import SportIcon from "../../src/assets/icons/SportIcon.astro";
---

<div class="container px-4 md:px-6">
  <h2
    class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl text-center"
  >
    Popular Categories
  </h2>
  <div class="grid gap-6 mt-8 md:grid-cols-3 lg:grid-cols-4">
    <div class="flex flex-col items-center justify-center">
      <MovieIcon />
      <h3 class="text-lg font-semibold">Movies</h3>
    </div>
    <div class="flex flex-col items-center justify-center">
      <MusicIcon />
      <h3 class="text-lg font-semibold">Concerts</h3>
    </div>
    <div class="flex flex-col items-center justify-center">
      <SportIcon />
      <h3 class="text-lg font-semibold">Sports</h3>
    </div>
    <div class="flex flex-col items-center justify-center">
      <MovieIcon />
      <h3 class="text-lg font-semibold">Theater</h3>
    </div>
  </div>
</div>
